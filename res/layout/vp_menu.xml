<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionenActivity" >

        <Button
            android:id="@+id/sf_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vp_exportieren_btn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/platzhalter"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:onClick="anzeigenClick"
            android:text="@string/vp_anzeigen"
            android:textColor="@color/white"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/vp_exportieren_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sf_chat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/platzhalter"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:onClick="exportierenClick"
            android:text="@string/vp_exportieren_menu"
            android:textColor="@color/white"
            android:textColorHint="@color/black" />

</RelativeLayout>