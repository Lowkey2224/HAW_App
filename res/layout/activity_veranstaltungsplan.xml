<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VeranstaltungsplanActivity" >

        <Button
            android:id="@+id/btn_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/platzhalter"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:onClick="platzhalterClick"
            android:text="@string/platzhalter"
            android:textColor="@color/white"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_gps"
            android:layout_alignRight="@+id/btn_gps"
            android:layout_below="@+id/btn_gps"
            android:text="@string/platzhalter" 
            
            android:onClick="platzhalterClick"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/platzhalter"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/black"/>

</RelativeLayout>