<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/account_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:textSize="18dip" />

    <EditText
        android:id="@+id/account_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/account_password"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendLogin"
        android:text="@string/login_send_chat" />
    
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendRegistration"
        android:text="@string/login_registration_chat" />

        <TextView
            android:id="@+id/login_failure"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:text="@string/login_failure"
            android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>